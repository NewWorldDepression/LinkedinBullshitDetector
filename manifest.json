{
    "manifest_version": 3,
    "name": "LinkedIn Bullshit Detector",
    "version": "1.1",
    "description": "Affiche un score de 'bullshit' avec un code couleur sur les posts LinkedIn directement dans le fil d'actualit√©.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}